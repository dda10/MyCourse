<div class="mt-4">
    <div class="row">

        <!-- Card-->
        {{#each courses}} 
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="Can't load picture">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>                   
                    <p class="card-text"> {{this.description}}</p>
                    <a href="#" class="btn btn-primary">Go to class</a>
                </div>
            </div>
        </div>
        {{/each}}
        
    </div>
</div>
